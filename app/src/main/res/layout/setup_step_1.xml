<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="25dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <EditText
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:textColorHint="@color/greyedOut"
            android:textColor="@color/white"
            android:hint="Enter Name"
            android:id="@+id/nameEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/emailEntry"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:textColorHint="@color/greyedOut"
            android:textColor="@color/white"
            android:hint="Enter Email"
            android:id="@+id/emailEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/emailConfirm"
            app:layout_constraintTop_toBottomOf="@+id/nameEntry" />

        <EditText
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:textColorHint="@color/greyedOut"
            android:textColor="@color/white"
            android:hint="Confirm Email"
            android:id="@+id/emailConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/passwordEntry"
            app:layout_constraintTop_toBottomOf="@+id/emailEntry" />

        <EditText
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:textColorHint="@color/greyedOut"
            android:textColor="@color/white"
            android:hint="Enter Password"
            android:id="@+id/passwordEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/passwordConfirm"
            app:layout_constraintTop_toBottomOf="@+id/emailConfirm" />

        <EditText
            android:background="@drawable/custom_edit_text"
            android:padding="10dp"
            android:textColorHint="@color/greyedOut"
            android:textColor="@color/white"
            android:hint="Confirm Password"
            android:id="@+id/passwordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordEntry" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

</LinearLayout>